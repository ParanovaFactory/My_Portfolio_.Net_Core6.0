@using My_Portfolio_.Net_Core_6._0.DAL.Entities
@model List<About>
@{
    ViewData["Title"] = "AboutList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="card">
	<div class="card-header">
		<div class="card-title">About List</div>
	</div>
	<div class="card-body">
		<table class="table mt-3">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Title</th>
					<th scope="col">Operations</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.AboutId</td>
						<td>@item.AboutTitle</td>
						<td>
							<a href="/About/Detail/@item.AboutId" class="btn btn-primary">Details</a>
							<a href="/About/Edit/@item.AboutId" class="btn btn-warning">Edit</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>