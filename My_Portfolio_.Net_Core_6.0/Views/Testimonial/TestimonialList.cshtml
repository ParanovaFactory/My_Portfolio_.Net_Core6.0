@using My_Portfolio_.Net_Core_6._0.DAL.Entities
@model List<Testimonial>
@{
    ViewData["Title"] = "TestimonialList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="card">
	<div class="card-header">
		<div class="card-title">Testimonial List</div>
	</div>
	<div class="card-body">
		<table class="table mt-3">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Title</th>
					<th scope="col">Operations</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.TestimonialId</td>
						<td>@item.TestimonialTitle</td>
						<td>
							<a href="/Testimonial/Detail/@item.TestimonialId" class="btn btn-primary">Details</a>
							<a href="/Testimonial/Edit/@item.TestimonialId" class="btn btn-warning">Edit</a>
							<a href="/Testimonial/Delete/@item.TestimonialId" class="btn btn-danger">Delete</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
<br />
<a href="/Testimonial/Add" class="btn btn-secondary">Add New Testimonial</a>

